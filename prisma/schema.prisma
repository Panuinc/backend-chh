generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  Enable
  Disable
}

model User {
  userId        String     @id @default(cuid())
  userFirstName String
  userLastName  String
  userEmail     String     @unique
  userPassword  String
  userStatus    UserStatus @default(Enable)
  userCreateBy  String
  userCreateAt  DateTime   @default(now())
  userUpdateBy  String?
  userUpdateAt  DateTime?  @updatedAt

  createdBy    User?  @relation("UserCreatedBy", fields: [userCreateBy], references: [userId])
  createdUsers User[] @relation("UserCreatedBy")

  updatedBy    User?  @relation("UserUpdatedBy", fields: [userUpdateBy], references: [userId])
  updatedUsers User[] @relation("UserUpdatedBy")

  @@index([userCreateBy])
  @@index([userUpdateBy])
}
